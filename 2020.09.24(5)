//Написать функцию сортировки массива, использующую указательную арифметику вместо обращения по индексам.
#include <iostream>
using namespace std;

void Ptr_BubbleSort (int *a, int n)
{

  for(int i = 0; i < n - 1; ++i)
  {
    int minIndex = i;
    for(int j = i + 1; j < n; ++j)
    {
       if(*(a + minIndex ) > *(a + j))
       {
         minIndex = j;
       }
    }
    swap (*(a + i), *(a + minIndex));
  }
}


int main()
{
  int n;
  cin >> n;
  int a[n];
  for (int i = 0; i < n; ++i)
  {
    cin >> a[i];
  }

  Ptr_BubbleSort(a, n);

  for (int i = 0; i < n; ++i)
    cout << a[i] << " ";

  return 0;
}
